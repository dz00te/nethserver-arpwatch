# -u <username> : defines with what user id arpwatch should run
# -e <email>    : the <email> where to send the reports
# -s <from>     : the <from>-address
{
my $interfaces = ${'arpwatch'}{'interface'};
$OUT .= "OPTIONS=\"-i $interfaces  -f /var/lib/arpwatch/arp.dat -u arpwatch -e root -s 'arpwatch\@${'DomainName'}'\"\n";
}

